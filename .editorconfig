# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_style = tab
indent_size = 4
max_line_length = 120

# JSON files
[*.json]
indent_style = tab
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = tab
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = tab
indent_size = 4

# Shell scripts
[*.{sh,ps1}]
indent_style = tab
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Web files
[*.{html,css,js,ts,tsx,jsx}]
indent_style = tab
indent_size = 2
